@model IEnumerable <Craft_Beer_Me.Models.Brewery>

<title>We Recommend: </title>
<header>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 4px solid black;
            text-align: left;
            padding: 8px;
            
        }

        .BeerColor{
            color: black
        }

        .tourbar {
            overflow: hidden;
            
            position: absolute;
            bottom: 0;
            left: 15%;
            height: 85%;
            width: 160px;
            color: white;
        }

        .tourbar a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration-color: black;
            font-size: 17px;
        }

        .tourbar a:hover {
            background: #dddddd;
            color: white;
        }
        .Mainbody {
            background-color: white;
            padding-left: 12em;
            font-family:;
            font-size: 18px;
            color: black;
            /*text-shadow: 3px 3px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000;*/
        }
        .button1 {
            border-radius: 8px;
            border: hidden;
            background-color:blue;
        }
    </style>
    
</header>
<br />
<br />
<body class="Mainbody">
    @foreach (var brewery in (List<Craft_Beer_Me.Models.Brewery>)Session["breweries"])
    {
        <table>
            <tr>
                <th>
                    <img src="@brewery.PictureUrl" alt="No Picture" width="150" />
                </th>
                <th>
                    <a href="@brewery.Url">@brewery.Name</a>
                </th>
                <th>
                    ABV
                </th>
                <th>
                    Style Name: Hover over these
                </th>
                @{ int counter = 0;}
            </tr>
            @foreach (var beer in brewery.Menu)
            {
                if (counter == 3)
                {
                    break;
                }
                <tr>
                    <td>
                        @if (@beer.Picture != null)
                        {
                            <img src="@beer.Picture" alt="No Picture" width="50"/>
                        }
                        else
                        {
                            <img src="@brewery.PictureUrl" alt="No Picture" width="100" />
                        }
                    </td>

                    <td>

                        @beer.BeerName
                    </td>
                    <td>
                        @beer.ABV%
                    </td>
                    <td class="BeerColor">


                        
                        <p title="@beer.Description">@beer.CategoryName</p>

                    </td>
                </tr>
                counter++;
            }
        </table>
        <br /><br />
     }
 </body>

<footer class="tourbar">
    <p>Which awesome breweries do you want to visit?</p>

    <form action="googleTour" target="_blank">
          <input type="checkbox" name="Atwater" />Atwater Brewery <br />
          <input type="checkbox" name="Vivant" />Brewery Vivant<br />
          <input type="checkbox" name="Elk" />Elk Brewery<br />
          <input type="checkbox" name="Founders" />Founders Brewing<br />
          <input type="checkbox" name="Harmony" />Harmony Brewery<br />
          <input type="checkbox" name="Hideout" />Hideout Brewery<br />
          <input type="checkbox" name="Hopcat" />Hopcat Brewery<br />
          <input type="checkbox" name="Jolly" />Jolly Pumpkin Brewery<br />
          <input type="checkbox" name="Holland" />New Holland Brewery<br />
          <input type="checkbox" name="Peoples" />Peoples Cider<br />
          <input type="checkbox" name="Perrin" /> Perrin Brewery<br />
          <input type="checkbox" name="Rockford" />Rockford Brewery<br />
          <input type="checkbox" name="Schmohz" />Schmohz Brewery<br />
          <input type="checkbox" name="Mitten" />The Mitten Brewery<br />
          <button class="button1" type="submit">I'm ready for my Tour!</button>
            </form>
</footer>